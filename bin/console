#!/usr/bin/env ruby
require "bundler/setup"
require "tea_shopper"

# (If you use this, don't forget to add pry to your Gemfile!)
# require "pry"
# Pry.start

# Methods for testing
def reload!
  load 'bin/console'
end
def new_test
  TeaShopper::CLI.new.make_teas
  TeaShopper::CLI.new.add_tea_attributes
end
def new_tea
  TeaShopper::CLI.new.display_tea("Buddha's Hand")  
end

require "irb"
puts "\nWelcome to your new CLI Environment"
IRB.start(__FILE__)